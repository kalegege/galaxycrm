<h2 class="contentTitle">新增活动介绍</h2>
<form method="post" action="${basePath}/activity/activityIntroduction/create" class="required-validate pageForm" onsubmit="return validateCallback(this, dialogAjaxDone);">
	<div class="pageFormContent" layoutH="97">
		<dl>
			<dt>活动编号：</dt>
			<dd>
				<input type="text" name="code" class="required" remote="${basePath}/activity/activityIntroduction/validate"/>
			</dd>
		</dl>
		<dl>
			<dt>活动名称：</dt>
			<dd>
				<input type="text" name="name" class="required"/>  
			</dd>
		</dl>
		<dl>
			<dt>活动介绍：</dt>
			<dd>
				<input type="text" name="introduction" class="required"/>
			</dd>
		</dl>
	
		<dl>
			<dt>状态:</dt>
			<dd><select name="status" >
				<option value="0" >0</option>
				<option value="1" >1</option>
			</select></dd>
		</dl>
		
		
	</div>
			
	<div class="formBar">
		<ul>
			<li><div class="buttonActive"><div class="buttonContent"><button type="submit">确定</button></div></div></li>
			<li><div class="button"><div class="buttonContent"><button type="button" class="close">关闭</button></div></div></li>
		</ul>
	</div>
</form>